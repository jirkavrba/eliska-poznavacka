<ul>
</ul>

<div class="card">
  <div class="card-body">
    <h5 class="card-title text-muted"><%= @question_set.name %></h5>
    <h2 class="card-title">Správa kartiček</h2>
    <div class="card-text">
      <hr>
        <%= link_to 'Přidat kartičku', new_question_set_question_path(@question_set), class: 'btn btn-success' %>
        <%= link_to 'Zpět', question_set_path(@question_set), class: 'btn btn-dark' %>
      <hr>
        <% if @questions.empty? %>
          <p class="text-muted">V této sadě nejsou žádné kartičky</p>
        <% else %>
          <div class="row">
            <% @questions.each do |question| %>
              <div class="col-sm-12 col-md-3">
                <div class="card">
                  <img src="<%= question.image_url %>" class="card-img-top">
                  <div class="card-body">
                    <div class="card-title"><b><%= question.answer %></b></div>

                    <div class="progress bg-light">
                      <div class="bg-success progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
                           style="width: <%= question.success_ratio * 100 %>%"></div>
                    </div>

                    <br>

                    <div class="row">
                      <div class="col-sm-12">
                        <%= link_to 'Upravit', edit_question_set_question_path(@question_set, question), class: 'btn btn-primary btn-block' %>
                      </div>
                      <div class="col-sm-12 mt-1">
                        <%= button_to 'Smazat', question_set_question_path(@question_set, question), method: :delete, class: 'btn btn-dark btn-block', data: { confirm: 'Opravdu chceš smazat tuto kartičku?' } %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <hr>
      <%= button_to 'Resetovat pokrok u všech kartiček', reset_question_set_path(@question_set), class: 'btn btn-danger', data: { confirm: 'Opravdu chceš resetovat pokrok u všech kartiček?' }%>
  </div>
</div>
</div>
