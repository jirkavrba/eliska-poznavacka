<!DOCTYPE html>
<html>
  <head>
    <title>Poznávačka</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://bootswatch.com/4/sandstone/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-latest.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
  </head>
  <body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <div class="navbar-brand">Poznávačka</div>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="static-tests" role="button" data-toggle="dropdown">
              Testovací nástroje
            </a>
            <div class="dropdown-menu">
              <%= link_to 'Převod jednotek', static_test_unit_conversion_url, class: 'dropdown-item' %>
            </div>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container pt-5">
      <%= yield %>
    </div>
  </body>
</html>
