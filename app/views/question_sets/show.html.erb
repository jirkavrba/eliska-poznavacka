<div class="card">
  <div class="card-body">
    <h2 class="card-title"><%= @question_set.name %></h2>
    <div class="card-text">
      <p class="text-muted">Sada obsajuje <%= @question_set.questions.count %> kartiček</p>
    <hr>
      <%= link_to "Spustit test", test_question_set_path(@question_set.id), class: 'btn btn-primary' %>
      <%= link_to "Správa kartiček", question_set_questions_path(@question_set.id), class: 'btn btn-dark' %>
    <hr>
      <%= link_to "Zpět", question_sets_path, class: 'btn btn-secondary' %>
      <%= link_to "Upravit sadu", edit_question_set_path(@question_set.id), class: 'btn btn-secondary' %>

  </div>
</div>